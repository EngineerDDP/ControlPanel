<Window x:Class="ControlPanel.BulletScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlPanel"
        mc:Ignorable="d"
        Title="BulletScreen" Height="400" Width="340"
        WindowStyle="None"
        Background="{x:Null}"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        >
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="#FFE2E2E2" Opacity="0.5"/>
        </Grid.Background>
        <ListView Background="{x:Null}" BorderThickness="0">
            <ListViewItem>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Foreground="Green" Text="胡俊  18:56:33" FontSize="15" ></TextBlock>
                    <TextBlock Grid.Row="1" Foreground="Black" Text="知道了" FontSize="22"/>
                </Grid>
            </ListViewItem>
        </ListView>
    </Grid>
</Window>
